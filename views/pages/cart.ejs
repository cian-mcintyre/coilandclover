                                <th scope="col">Quantity</th>
                                <th scope="col">Total</th>
                            </tr>
                        </thead>
                        <tbody>

                            <%
                            let subtotal = 0;
                            for (const cartItem of cartItems) {
                              const total = cartItem.product.Price * cartItem.quantity;
                              subtotal += total;
                          %>
                                <tr>
                                  <td>
                                    <div class="media">
                                      <div class="d-flex">
                                        <img src="../../public/img/product/<%= cartItem.product.image %>" alt="">
                                      </div>
                                      <div class="media-body">
                                        <p><%= cartItem.product.productName %></p>
                                      </div>
                                    </div>
                                  </td>
                                  <td>
                                    <h5>€<%= cartItem.product.Price %></h5>
                                  </td>
                                  <td>
                                    <div class="product_count">
                                        <button class="btn btn-sm btn-danger" onclick="removeFromCart('<%= cartItem.product._id %>')">Remove</button>
                                        <span><%= cartItem.quantity %></span>
                                        
                                      </div>
                                  </td>
                                  <td>
                                    <h5>€<%= cartItem.product.Price * cartItem.quantity %></h5>
                                  </td>
                                </tr>
                              <% } %>
                              

                              <style>
                                .product_count {
                                  display: flex;
                                  align-items: center;
                                }
                              
                                .product_count span {
                                  margin-right: 10px;
                                }
                              </style>
                            
                            <tr class="bottom_button">
                                <td>
                                    
                                </td>
                                <td>

                                </td>
                                <td>

                                </td>
                                <td>
